<!DOCTYPE html>
%html{lang:'en'}
  %head
    %meta{charset:'utf-8'}
    %meta{content:'width=device-width, initial-scale=1', name:'viewport'}
    %link{href:'//fonts.googleapis.com/css?family=Cardo:400,400italic,700', rel:'stylesheet'}
    %link{href:"{{ page.rel_site_url }}/assets/minimal.css", rel:'stylesheet'}
    %link{href:"{{ page.rel_site_url }}/assets/style.css", rel:'stylesheet'}
    %script
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
      ga('create', '{{ site.google_analytics }}', 'auto');
      ga('send', 'pageview');
    %title {{ site.author }} - {{ page.title }}
  %body
    %header
      .container.text-center
        %a#banner{href:"{{ page.rel_site_url }}"}
          {{ site.author }}
    %main
      .container
        -block content:
          {{ page.content }}
    %footer
      .container
        %p#pubkey.float-right<
          pub
          %a{href:"{{ page.rel_site_url }}/assets/pubkey.txt"}<
            {{ site.pubkey_id }}
        %p#copyright<
          &copy; {{ page.date.year }}
          %a{href:"{{ site.url }}"}<
            {{ site.author }}
          &middot
          %a{href:"{{ site.license_url }}"}<
            {{ site.license_name }}
